@page
@model ContactUsModel
@{
    ViewData["Title"] = "Contact Us";
}   
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card contact-card p-4 text-center">
                <h3 class="fw-bold mb-3">📍 Contact Us</h3>
                <p class="text-muted mb-4">Reach out to us for any inquiries or support.</p>

                <div class="mb-3">
                    <i class="bi bi-geo-alt-fill contact-icon"></i>
                    <p class="fw-semibold mb-0">Our Office</p>
                    <p class="text-muted">123 Main Street, City, Country</p>
                </div>

                <div class="mb-3">
                    <i class="bi bi-telephone-fill contact-icon"></i>
                    <p class="fw-semibold mb-0">Phone</p>
                    <p class="text-muted">+1 234 567 890</p>
                </div>

                <div class="mb-3">
                    <i class="bi bi-envelope-fill contact-icon"></i>
                    <p class="fw-semibold mb-0">Email</p>
                    <p class="text-muted">support@impoundfinders.com</p>
                </div>

                <div class="mb-3">
                    <i class="bi bi-clock-fill contact-icon"></i>
                    <p class="fw-semibold mb-0">Business Hours</p>
                    <p class="text-muted">Mon - Fri: 9:00 AM - 6:00 PM</p>
                </div>
