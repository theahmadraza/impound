@page
@model SearchModel
@{
    ViewData["Title"] = "Vehicle Search";
}

<h2 class="text-center my-4">Search for Your Vehicle</h2>

<div class="container">
    <div class="card p-4 shadow">
        <div class="row">
            <div class="col-md-10">
                <input type="text" id="vinInput" class="form-control" placeholder="Enter VIN (e.g., 1HGCM82633A123456)" required>
            </div>
            <div class="col-md-2">
                <button id="searchButton" class="btn btn-primary w-100">Search</button>
            </div>
        </div>
    </div>

    <div class="mt-4 alert alert-danger" id="errorMessage" style="display: none;"></div>
    <div class="table-responsive w-100">
        <div class="mt-4">
            <h4>Search Results</h4>

            <table class="table table-striped" id="vehiclesTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>VIN</th>
                        <th>Make</th>
                        <th>Model</th>
                        <th>Color</th>
                        <th>Year</th>
                        <th>Impound Lot</th>
                        <th>Facility</th>
                        <th>Date Impounded</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div> 
</div> 
 
<script type="text/javascript" src="~/customJs/searchvehicle.js"></script>
