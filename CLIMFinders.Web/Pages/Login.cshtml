@page
@model CLIMFinders.Web.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<style>

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 70vh;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
</style>
<input type="hidden" name="returnUrl" value="Input.ReturnUrl" />
<div class="container login-container rounded mb-5">

    <div class="col-md-4">
        <div class="card p-4">
            <h4 class="text-center mb-3">Login</h4>
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input type="email" asp-for="Input.Email" class="form-control" required />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input type="password" asp-for="Input.Password" class="form-control" required />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-2 w-30">Login</button>
            </form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mt-3 text-center">
                <a asp-area="" asp-page="/ForgotPassword" class="text-decoration-none">Forgot Password?</a>
                <br>
                <a class="text-decoration-none" asp-area="" asp-page="/Register">Create an Account</a>
            </div>
        </div>
    </div>
</div>
